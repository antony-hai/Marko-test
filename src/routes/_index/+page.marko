style {
  .container {
    margin: 20px auto;
    max-width: 900px;
    box-sizing: border-box;
  }
  nav.head {
    display: flex;
    background-color: #0d1940;
    padding: 30px;
  }
  img.logo {
    width: 50px;
    vertical-align: top;
  }
  div.contant {
    flex: 1;
    margin-left: 32px;
  }
  span.w {
    color: #75c5e9;
  }
  div.subTitle {
    font-size: 36px;
    margin-top: 12px;
  }
  div.title {
    font-size: 20px;
  }
  main.main {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    width: 100%;
    margin-top: 20px;
  }
  section.right {
    background-color: #0d1940;
    padding: 20px 40px;

  }
  .left, .right {
    width: 48%;
    box-sizing: border-box;
  }
   @media screen and (max-width: 720px) {
    .right, .left {
      width: 100%;
    }

    div.subTitle { font-size: 17px;}
    div.title { font-size: 14px;}
  }

  .left header {
    padding: 16px 32px;
    background-color: #0133a0;
  }
  ul.list {
    margin: 12px 0;
    padding: 0;
  }
  li.list-item {
    display: flex;
    padding:20px 4px;
  }
  .form {
    margin: 20px 0;
    box-sizing: border-box;
  }
  .form .formline {
    display: flex;
    justify-content: space-between;
    padding-bottom: 24px;
  }
  .form .label {
    font-size: 12px;
  }
  .form .input {
    outline: none;
    list-style: none;
    background-color: white;
    padding: 6px 4px;
    border-radius: 4px;
    font-size: 12px;
    width: 100%;
    border: none;
  }
  .form .btn {
    outline: none;
    display: inline-block;
    user-select: none;
    text-align: center;
    width: 160px;
    border: none;
    border-radius: 24px;
    font-size: 16px;
    line-height: 2;
    background-color: #ed7766;
    color: #212143;
    font-weight: 600;
  }

}
